<%= form_with(model: resource, local: true) do |form| %>
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :resource_name %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :resource_url %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :type, id: :resource_type %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :resource_description %>
  </div>

  <div class="field">
    <%= form.label :rank %>
    <%= form.number_field :rank, id: :resource_rank %>
  </div>

  <div class="field">
    <%= form.label :comment_ids %>
    <%= form.text_area :comment_ids, id: :resource_comment_ids %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
